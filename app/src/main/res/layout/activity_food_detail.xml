<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_style"
        app:title="@string/s_title_toolbar_activity_food_detail" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_margin_padding_20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_fooddetail_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/text_fooddetail_name"
                style="@style/style_margin_for_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/d_text_size_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/text_fooddetail_price"
                style="@style/style_margin_for_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/d_text_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/colorPrimary" />
            <TextView
                android:id="@+id/text_fooddetail_seller"
                style="@style/style_margin_for_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/d_text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/style_margin_for_multiple_view">

                <Button
                    android:id="@+id/button_fooddetail_locateme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/s_button_locate_me_activity_food_detail" />

                <Button
                    android:id="@+id/button_fooddetail_getdirection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/s_button_foodetail_getdirection" />

            </LinearLayout>
            <TextView
                android:id="@+id/text_fooddetail_distance"
                style="@style/style_margin_bottom_l_r_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/d_text_size_small" />
            <TextView
                android:id="@+id/text_fooddetail_poster"
                style="@style/style_margin_for_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/d_text_size_small" />
            <TextView
                android:id="@+id/text_fooddetail_comment"
                style="@style/style_margin_bottom_l_r_multiple_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/d_text_size_small" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>